.home-page-container {
  display: grid;
  grid-template-columns: 310px auto;
}

.chats-container {
  height: 100vh;
  background: #FBFBFB;
  border-right: 1px solid #EAEAEA;
  padding: 0 10px;
}

.chats-header {
  display: flex;
  flex-direction: column;
  align-items: end;
  border-bottom: 1px solid #EAEAEA;
}

.chats-button-to-profile {
  width: 100px;
  font-size: 12px;
  line-height: 12px;
  text-align: right;
  color: var(--color-secondary);
  background-color: transparent;
  margin: 21px 0;

  & img {
    padding-top: 2px;
    margin-left: 8px;
  }
}

.chats-search-input {
  height: 32px;
  width: 100%;
  font-size: 12px;
  text-align: center;
  background-image: url("src/assets/SearchIcon.svg");
  background-repeat: no-repeat;
  background-position: 37% 10px; 
  background-color: #EFEFEF;
  border-radius: 5px;
  margin-bottom: 14px;
  
  &::placeholder {
    color: var(--color-secondary);
  }

  &:active, &:focus {
    background-position: 10px 10px; 
    text-align: start;
    padding-left: 30px;
  }
}

.chat-container {
  margin: 0 20px;
  display: grid;
  grid-template-rows: 55px auto 55px;
}

.chat-user-info-container {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #EAEAEA;
}

.chat-avatar-wrapper {
  margin-right: 10px;
}

.chat-avatar {
  height: 34px;
  width: 34px;
  
  & img {
    height: 15px;
    width: 15px;
  }
}

.chat-message-input-wrapper {
  width: 100%;
  display: flex;
  align-items: center;
  border-top: 1px solid #EAEAEA;
}

.chat-message-attach-button,
.chat-message-send-button {
  display: flex;
  align-items: center;
  background-color: transparent;
}

.chat-message-attach-button {
  & img {
    &:hover {
      fill: var(--color-primary);
    }
  }
}

.chat-message-input {
  width: 100%;
  height: 32px;
  background-color: #EFEFEF;
  border-radius: 30px;
  margin: 0 10px;
  
  &::placeholder {
    font-size: 12px;
    color: var(--color-secondary);
    padding-left: 20px;
  }
}
