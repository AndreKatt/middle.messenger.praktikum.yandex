.profile-edit-item-container {
  width: 100%;
  height: 34px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #EAEAEA;
  position: relative;
}

.edit-profile-input {
  position: absolute;
  right: 0;
  text-align: end;
  color: var(--color-secondary);
  
  &:active, &:focus {
    color: inherit;
  }
}
